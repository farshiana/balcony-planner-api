    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "connect-session-sequelize": "^7.0.1",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-session": "^1.17.1",
        "express-validator": "^6.6.1",
        "helmet": "^4.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.3.3",
        "pg-hstore": "^2.3.3",
        "sequelize": "^6.3.4"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.5",
        "@babel/core": "^7.11.4",
        "@babel/node": "^7.10.5",
        "@babel/plugin-transform-runtime": "^7.11.5",
        "@babel/preset-env": "^7.11.0",
        "cross-env": "^7.0.2",
        "eslint": "^7.7.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^24.0.1",
        "faker": "^5.1.0",
        "husky": "^4.2.5",
        "jest": "^26.4.2",
        "nodemon": "^2.0.4",
        "sequelize-cli": "^6.2.0",
        "supertest": "^4.0.2"
    },
    "husky": {
